{
  "name": "pokertools-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc -b",
    "clean": "tsc -b --clean && rm -rf node_modules packages/*/node_modules packages/*/dist",
    "test": "npm run test --workspaces",
    "bench": "npm run bench -w @pokertools/bench",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\""
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "fast-check": "^4.3.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}

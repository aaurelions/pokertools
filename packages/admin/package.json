{
  "name": "@pokertools/admin",
  "version": "1.0.2",
  "description": "Fund aggregation (sweeper) and withdrawal processing service",
  "author": "A.Aurelius",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage cache node_modules contracts/out",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "contracts:build": "forge build",
    "contracts:test": "forge test",
    "db:prepare": "npm run db:ensure:test --workspace=@pokertools/api",
    "pretest": "npm run contracts:build && npm run db:prepare",
    "test": "vitest run tests/e2e/full-lifecycle.test.ts",
    "test:stand-alone": "npm run infra:up --workspace=@pokertools/api && npm run test; npm run infra:down --workspace=@pokertools/api",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts"
  },
  "keywords": [
    "poker",
    "admin",
    "blockchain",
    "sweeper",
    "withdrawal",
    "telegram"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@pokertools/types": "*",
    "@prisma/client": "^6.19.0",
    "@scure/bip32": "^1.7.0",
    "@scure/bip39": "^1.5.0",
    "dotenv": "^16.6.1",
    "envalid": "^8.1.1",
    "grammy": "^1.38.4",
    "ioredis": "^5.8.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "viem": "^2.40.3"
  }
}

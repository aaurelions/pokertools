{
  "name": "@pokertools/api",
  "version": "1.0.2",
  "description": "Production-ready REST/WebSocket API for PokerTools engine",
  "author": "A.Aurelius",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist generated coverage .runtime node_modules",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "infra:up": "bash scripts/ensure-redis.sh",
    "infra:down": "bash scripts/stop-redis.sh",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:ensure:test": "NODE_ENV=test bash scripts/ensure-db.sh",
    "pretest": "npm run db:ensure:test",
    "test": "NODE_ENV=test vitest run --config vitest.config.ts",
    "test:stand-alone": "npm run infra:up && npm run test; npm run infra:down",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts"
  },
  "keywords": [
    "poker",
    "api",
    "websocket",
    "fastify",
    "engine",
    "rest",
    "real-time",
    "redis",
    "postgresql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aaurelions/pokertools.git",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/aaurelions/pokertools/tree/main/packages/api#readme",
  "bugs": {
    "url": "https://github.com/aaurelions/pokertools/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@pokertools/engine": "*",
    "@pokertools/types": "*",
    "@prisma/client": "^6.19.0",
    "@scure/base": "^1.2.6",
    "@scure/bip32": "^1.7.0",
    "bullmq": "^5.65.0",
    "envalid": "^8.1.1",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.8.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "redlock": "^5.0.0-beta.2",
    "ulid": "^2.3.0",
    "viem": "^2.40.3",
    "zod": "^3.25.76"
  }
}

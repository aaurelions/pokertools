# Test Environment Configuration
NODE_ENV=test
PORT=3001
HOST=127.0.0.1

# Use separate test database (path relative to prisma/schema.prisma)
DATABASE_URL="file:../.runtime/test.db"

# Use separate Redis DB (DB 1 for tests, DB 0 for dev)
REDIS_URL="redis://localhost:6379/1"

# Test secrets (not used for real auth in tests)
JWT_SECRET="test-jwt-secret-do-not-use-in-production"
COOKIE_SECRET="test-cookie-secret-do-not-use-in-production"

# Reduce logging noise in tests
LOG_LEVEL=error

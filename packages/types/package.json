{
  "name": "@pokertools/types",
  "version": "1.0.2",
  "description": "TypeScript type definitions for poker game engine",
  "author": "A.Aurelius",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "NODE_OPTIONS='--no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--no-warnings' jest --watch",
    "test:coverage": "NODE_OPTIONS='--no-warnings' jest --coverage"
  },
  "keywords": [
    "poker",
    "types",
    "typescript",
    "texas-holdem",
    "game-engine",
    "immutable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aaurelions/pokertools.git",
    "directory": "packages/types"
  },
  "homepage": "https://github.com/aaurelions/pokertools/tree/main/packages/types#readme",
  "bugs": {
    "url": "https://github.com/aaurelions/pokertools/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
